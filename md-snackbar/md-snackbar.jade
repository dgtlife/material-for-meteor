//- The overall snackbar assembly.
template(name="mdSnackbar")
  .md-snackbar(data-snackbar="")
    .md-snackbar__container
      if currentSnackbar
        +each currentSnackbar
          +_snackbar

//- An individual snackbar.
template(name="_snackbar")
  .md-snackbar--current(data-current-snackbar="" id="snackbar-!{_id}")
    .md-snackbar__message(data-snackbar-message="")=message
    if buttonLabel
      +mdButton(
        id=buttonId
        name=buttonName
        classes="md-snackbar__button"
        _snackbarButton=""
        label=buttonLabel
      )
