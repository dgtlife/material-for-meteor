@require '../md-common'

/////////////////////    STYLES FOR MD DROPDOWN MENU    ////////////////////////
.md-dropdown-menu
  position relative
.md-popup-menu[data-dropdown-popup]
  position absolute
  right 0
  top 1.375rem
  width 100%
.md-button[data-dropdown-trigger]
  color #757575
  display inline-block
  padding 0.34375rem 0
  width 100%
  > .md-button__icon
    display block
    float right
    margin-right -0.375rem
  > .md-button__icon.on-firefox
    margin-right -0.65rem
.md-menu[data-dropdown-menu]
  display none
  z-index -5
.md-menu[data-dropdown-menu][data-menu-open]
  display block

/////  Animations
// Down - default
.md-menu[data-dropdown-menu][data-menu-open][data-opening-animation=dropdown-down--default]
  -moz-animation dropdown-down--default 0.25s $md-timing-function--linear-out-slow-in
  -webkit-animation dropdown-down--default 0.25s $md-timing-function--linear-out-slow-in
  animation dropdown-down--default 0.25s $md-timing-function--linear-out-slow-in
@keyframes dropdown-down--default
  0%
    transform scale(0)
    transform-origin center top
  100%
    transform scale(1)
    transform-origin center top
// Middle - default
.md-menu[data-dropdown-menu][data-menu-open][data-opening-animation=dropdown-middle--default]
  -moz-animation dropdown-middle--default 0.25s $md-timing-function--linear-out-slow-in
  -webkit-animation dropdown-middle--default 0.25s $md-timing-function--linear-out-slow-in
  animation dropdown-middle--default 0.25s $md-timing-function--linear-out-slow-in
@keyframes dropdown-middle--default
  0%
    transform scale(0)
    transform-origin center center
  100%
    transform scale(1)
    transform-origin center center
// Up - default
.md-menu[data-dropdown-menu][data-menu-open][data-opening-animation=dropdown-up--default]
  -moz-animation dropdown-up--default 0.25s $md-timing-function--linear-out-slow-in
  -webkit-animation dropdown-up--default 0.25s $md-timing-function--linear-out-slow-in
  animation dropdown-up--default 0.25s $md-timing-function--linear-out-slow-in
@keyframes dropdown-up--default
  0%
    transform scale(0)
    transform-origin center bottom
  100%
    transform scale(1)
    transform-origin center bottom
