@require '../md-common'

////////////////////    VARIABLES FOR MD TOOLTIP STYLES    /////////////////////
$md-tooltip__bg-color = rgba(97,97,97,0.9)
$md-tooltip__color = #FEFEFE
$md-tooltip__font-size = 0.75rem

/////////////////////////    STYLES FOR MD TOOLTIP    //////////////////////////
.md-tooltip
  display block
  height 1.375rem
  position absolute
  transition visibility 0.15s
  visibility hidden
  z-index 1000
.md-tooltip__text
  background-color $md-tooltip__bg-color
  border-radius 0.125rem
  color $md-tooltip__color
  display block
  font-size $md-tooltip__font-size
  padding 0.25rem 0.5rem
  white-space nowrap
.md-tooltip.show-tooltip
  visibility visible
