@require '../md-common'

////////////////////    VARIABLES FOR MD TOOLBAR STYLES    /////////////////////
$md-toolbar__bg-color = #009688
$md-toolbar__color = #FFFFFF

/////////////////////////    STYLES FOR MD TOOLBAR    //////////////////////////
// Some styles are adapted from Polymer paper-toolbar. Some styles conform to
// the metrics and keylines specs for Material Design at
// https://www.google.com/design/spec/layout/metrics-keylines.html#metrics-keylines-keylines-spacing

.md-toolbar
  background-color $md-toolbar__bg-color
  color $md-toolbar__color
  display block
  position relative
  width 100%
  z-index 1
.md-toolbar,
[data-header]
  transition height 0.18s ease-in
.md-toolbar__bar
  $align-items-center()
  $display-flex()
  $flex-direction-row()
  padding 0 1rem
  position relative
.md-toolbar__bar.top
  background-color $md-toolbar__bg-color
  position relative
  z-index 5
.md-toolbar__bar.middle,
.md-toolbar__bar.bottom
  background-color $md-toolbar__bg-color
  left 0
  position absolute
  right 0
.md-toolbar__bar.middle
  z-index 3
.md-toolbar__bar.bottom
  bottom 0
  z-index 2
.md-toolbar__bar.bottom.has-tabs
  height 3rem
  z-index 4
.md-toolbar:not(.tall)
  .md-toolbar__bar.middle
    top 0
.md-toolbar__bar [data-icon-button][data-toolbar-menu-button]
  margin-right 1.25rem
.md-toolbar__bar .title
  $md-title()
  line-height normal
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
.md-toolbar__bar.start-justified
  $justify-content-start()
.md-toolbar__bar.center-justified
  $justify-content-center()
.md-toolbar__bar.end-justified
  $justify-content-end()
.md-toolbar__bar.around-justified
  $justify-content-around()
.md-toolbar__bar.between-justified
  $justify-content-between()
.md-toolbar__bar .fit
  bottom 0
  left 0
  margin 0
  position absolute
  right 0
  top auto
  width auto

// Desktops and tablets
@media only screen and (min-width: 600px)
  .md-toolbar,
  .md-toolbar__bar
    height 4rem
  .md-toolbar.medium-tall
    height 8rem
  .md-toolbar.tall
    height 12rem
  .md-toolbar.tall
    .md-toolbar__bar.middle:not(.collapsed)
      top 4rem
    .md-toolbar__bar.middle.collapsed
      top 0
  .md-toolbar__bar.top
    padding 0 0.75rem
  .md-toolbar__bar.middle,
  .md-toolbar__bar.bottom
    .title
      margin-left 5.5rem
  .md-toolbar__bar [data-toolbar-menu-button] + .title
    margin-left 1.5rem
  .md-header-panel[data-docked-left] > .md-toolbar
    .md-toolbar__bar .title
      margin-left 1.5rem

// Phones
@media only screen and (max-width: 600px)
  .md-toolbar,
  .md-toolbar__bar
    height 3.5rem
  .md-toolbar.medium-tall
    height 7rem
  .md-toolbar.tall
    height 10.5rem
  .md-toolbar.tall
    .md-toolbar__bar.middle:not(.collapsed)
      top 3.5rem
    .md-toolbar__bar.middle.collapsed
      top 0
  .md-toolbar__bar [data-toolbar-menu-button] + .title
    margin-left 0
  .md-toolbar__bar.top
    padding 0 0.25rem
  .md-toolbar__bar.middle,
  .md-toolbar__bar.bottom
    .title
      margin-left 3.5rem
  .md-toolbar__bar.bottom.has-tabs
    padding 0
  .md-toolbar.has-tabs > .md-toolbar__bar.middle
    top 0
