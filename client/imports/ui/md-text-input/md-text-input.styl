@require '../md-common'

///////////////    STYLES FOR MD TEXT FIELD and MD TEXT AREA    ////////////////
.md-field__input-container
  $align-items-center()
  $display-flex()
  $flex-direction(row)
.md-field__prefix,
.md-field__suffix
  white-space nowrap
.md-field__input[disabled]
  color $md-color__disabled-text
.md-field__input[data-text-field-input],
.md-field__input[data-dropdown-input]
  margin 0
.md-field__input[data-text-area-input]
  margin 0 0 -0.25rem 0
  resize none
.md-text-area__size-detector
  background-color transparent
  border none
  box-shadow none
  color $md-color__text-input
  display inline-block
  font-size $md-field__input__font-size
  left 0
  line-height normal
  min-height 1.1875rem
  min-width 0
  outline none
  padding 0.5rem 0
  position absolute
  text-align left
  text-rendering optimizeLegibility
  top 1.375rem
  visibility hidden
  width 100%
