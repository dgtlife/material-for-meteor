@require '../md-common'

////////////////////////    STYLES FOR MD COLLAPSE    //////////////////////////
.md-collapse
  $display-flex()
  $flex-direction(row)
.md-collapse__content
  height 2.3rem
  overflow hidden
  transition height 0.3s
.md-collapse__content-sizer
  padding 0.1px 0
[data-collapse-toggle]
  transform: rotate(-180deg)
  transition transform 0.3s
[data-collapse-toggle].collapsed
  transform: rotate(0deg)
  transition transform 0.3s
[data-collapse-toggle] .md-icon.md-button__icon
  color #757575
