/////////////////////////////////  MD FONT  ////////////////////////////////////
@import url(https://fonts.googleapis.com/css?family=Roboto:400,300,500)

/////////////////////////////  COMMON VARIABLES  ///////////////////////////////
$md-font-family = "Roboto", "Noto", "Helvetica Neue", Helvetica, "Segoe", Arial, sans-serif !important
$md-color__primary = #009688
$md-color__primary-text = rgba(0, 0, 0, 0.87)
$md-color__secondary-text = rgba(0, 0, 0, 0.54)
$md-color__disabled-text = rgba(0, 0, 0, 0.38)
$md-color__text-input = $md-color__primary-text
$md-color__backdrop-bg = #000000
$md-color__helper-text = rgba(0, 0, 0, 0.38)
$md-color__error-text = #DD2C00
$md-color__divider = rgba(0, 0, 0, 0.12)
$md-field__input__font-size = 1rem

//////////////////////////////  COMMON MIXINS  /////////////////////////////////
/////  TYPOGRAPHY  /////
$md-title()
  font-size 1.25rem
  font-weight 400

/////  LAYOUT  /////
$fit()
  bottom 0
  left 0
  position absolute
  right 0
  top 0

/////  ANIMATION  /////
$md-timing-function--fast-out-slow-in = cubic-bezier(0.4, 0, 0.2, 1)
$md-timing-function--linear-out-slow-in = cubic-bezier(0, 0, 0.2, 1)
$md-timing-function--fast-out-linear-in = cubic-bezier(0.4, 0, 1, 1)
$md-timing-function--default = $md-timing-function--fast-out-slow-in

$md-transition--default()
  transition-duration 0.25s
  transition-timing-function $md-timing-function--fast-out-slow-in

/////  VENDOR PREFIXED PROPERTIES /////
$align-items-center()
  -ms-flex-align center
  -webkit-align-items center
  align-items center
$appearance-none()
  -ms-appearance none
  -moz-appearance none
  -webkit-appearance none
  appearance none
$display-flex()
  display -ms-flexbox
  display -webkit-flex
  display flex
$display-inline-flex()
  display -ms-inline-flexbox
  display -webkit-inline-flex
  display inline-flex
$flex(n)
  -ms-flex n 1 0.000000001px
  -webkit-flex n
  flex n
  -webkit-flex-basis 0.000000001px
  flex-basis 0.000000001px
$flex-direction(direction)
  -ms-flex-direction direction
  -webkit-flex-direction direction
  flex-direction direction
$flex-wrap(value)
  -ms-flex-wrap value
  -webkit-flex-wrap value
  flex-wrap value
$justify-content-start()
  -ms-flex-pack start
  -webkit-justify-content flex-start
  justify-content flex-start
$justify-content-center()
  -ms-flex-pack center
  -webkit-justify-content center
  justify-content center
$justify-content-end()
  -ms-flex-pack end
  -webkit-justify-content flex-end
  justify-content flex-end
$justify-content-around()
  -ms-flex-pack around
  -webkit-justify-content space-around
  justify-content space-around
$justify-content-between()
  -ms-flex-pack justify
  -webkit-justify-content space-between
  justify-content space-between
$user-select-none()
  -moz-user-select none
  -ms-user-select none
  -webkit-user-select none


