@require '../md-common'
@require '../md-shadow/md-shadow'

////////////////////    VARIABLES FOR MD BUTTON STYLES    //////////////////////
/////  MD BUTTON  /////
$md-button__border-radius = 0.125rem
$md-button__height = 2.25rem
$md-button__margin = 0.25rem
$md-button__min-width = 5.5rem          // conflicts with 4rem
$md-button__padding = 0.5rem
$md-button__font-size = 0.875rem        // 14sp
$md-button__font-weight = 500
$md-button__color = #009688
$md-button--hover__bg-color = #E0F2F1
$md-button--focus__bg-color = #B2DFDB
$md-button--active__bg-color = #80CBC4
$md-button--pressed__bg-color = #80CBC4
$md-button--disabled__bg-color = rgba(0,0,0,0.12)
$md-button--disabled__color = rgba(0,0,0,0.26)
$md-button--primary__bg-color = #FF6F00

/////  MD ICON BUTTON  /////
$md-icon-button__color = rgba(0,0,0,0.87)

/////  MD FAB  /////
$md-button--fab__color = #FEFEFE
$md-button--fab__bg-color = #03A9F4
$md-button--fab__size = 3.5rem
$md-button--fab__padding = 0
$md-button--mini-fab__size = 2.5rem
$md-button--mini-fab__padding = 0

/////  MD SNACKBAR BUTTON  /////
$md-button--snackbar__padding = 1.5rem

////////////////////////    STYLES FOR MD BUTTON    ////////////////////////////
/////  MD FLAT BUTTON (default)  /////
.md-button
  -webkit-tap-highlight-color transparent
  -ms-flex-align center
  -webkit-align-items center
  align-items center
  -webkit-appearance none
  appearance none
  background-color transparent
  border none
  border-radius $md-button__border-radius
  color $md-button__color
  cursor pointer
  display -ms-flexbox
  display -webkit-flex
  display inline-flex
  -ms-flex-direction row
  -webkit-flex-direction row
  flex-direction row
  height $md-button__height
  justify-content center
  margin 0 $md-button__margin
  min-width $md-button__min-width
  padding 0 $md-button__padding
  position relative
  outline none
  overflow hidden
  text-align center
  text-decoration none
  -webkit-user-select none
  user-select none
  will-change box-shadow, transform
  transition:
    box-shadow 0.2s cubic-bezier(0.4, 0, 1, 1),
    background-color 0.2s cubic-bezier(0.4, 0, 0.2, 1),
    color 0.2s cubic-bezier(0.4, 0, 0.2, 1)
  z-index 0
  &:hover
    background-color $md-button--hover__bg-color
  &:active
    background-color $md-button--active__bg-color
// Active state on a button in Chrome on Android
.md-button[data-active]
  //background-color $md-button--active__bg-color
  background-color transparent
// Disabled flat button
.md-button[disabled]
  color $md-button--disabled__color
  pointer-events none

/////  MD RAISED BUTTON  /////
.md-button[data-raised]
  $md-shadow--2dp()
  &:active
    $md-shadow--8dp()
// Active state on a raised button in Chrome on Android
.md-button[data-raised][data-active]
  $md-shadow--8dp()
// Disabled raised button
.md-button[data-raised][disabled]
  background-color $md-button--disabled__bg-color
  box-shadow none

/////  MD TOGGLE BUTTON  /////
.md-button[data-toggle][data-pressed]
  background-color $md-button--pressed__bg-color
// A raised toogle button
.md-button[data-raised][data-toggle][data-pressed]
  $md-shadow--8dp()

// BUTTON LABEL
.md-button > .md-button__label
  font-size 0.875rem
  font-weight 500
  pointer-events none
  text-transform uppercase
  letter-spacing 0

// BUTTON WITH AN ICON
.md-icon.md-button__icon
  color inherit
  padding 0 0.5rem 0 0
  pointer-events none

/////  MD ICON BUTTON  /////
// (i.e. an icon as a button)
.md-button[data-icon-button]
  background-color transparent
  color $md-icon-button__color
  height auto
  margin 0
  min-width 0
  padding 0.75rem
  position relative
  &:hover,
  &:active
    background-color transparent
.md-button[data-icon-button][data-active]
  background-color transparent
.md-button[data-icon-button] > .md-button__icon
  padding 0

/////  MD FAB  /////
// STANDARD FAB
.md-button[data-fab]
  color $md-button--fab__color
  background-color $md-button--fab__bg-color
  border-radius 50%
  box-sizing border-box
  height $md-button--fab__size
  margin 0
  min-width 0
  width $md-button--fab__size
  padding $md-button--fab__padding
  $md-shadow--6dp()
  &:active
    $md-shadow--12dp()
.md-button[data-fab] > .md-button__icon
  padding 1rem
// An active FAB in Chrome on Android
.md-button[data-fab][data-active]
  $md-shadow--12dp()

// MINI FAB
.md-button[data-fab=mini]
  height $md-button--mini-fab__size
  padding $md-button--mini-fab__padding
  width $md-button--mini-fab__size

// DISABLED FAB
.md-button[data-fab][disabled]
  background-color $md-button--disabled__bg-color
  box-shadow none
  color $md-button--disabled__color
  pointer-events none
.md-button[data-fab=mini] > .md-button__icon
  padding 0.5rem

// SNACKBAR BUTTON
.md-button[data-snackbar-button]
  margin 0
  min-width 0
  padding 0 $md-button--snackbar__padding

@media only screen and (max-width: 599px)
  .md-button[data-snackbar-button]
    padding 0 $md-button--snackbar__padding 0 0
