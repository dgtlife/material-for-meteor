/////////////////////////    VARIABLES FOR MD ICON    //////////////////////////
$md-icon__badge-font-size = 0.75rem
$md-icon__badge-color = #FFFFFF
$md-icon__badge-bg = #C62828

//////////////////////////    STYLES FOR MD ICON    ////////////////////////////
.md-icon
  fill currentcolor
  height 1.5rem
  position relative
  width: 1.5rem
  display -ms-inline-flexbox
  display -webkit-inline-flex
  display inline-flex
.md-icon__svg
  display block
  height 100%
  width 100%
// A badged-icon
.md-icon[data-badge-count]::after
  content attr(data-badge-count)
  align-content center
  align-items center
  background-color $md-icon__badge-bg
  border-radius 50%
  color $md-icon__badge-color
  display flex
  flex-direction row
  flex-wrap wrap
  font-size $md-icon__badge-font-size
  font-weight 500
  height 1.25rem
  justify-content center
  position absolute
  right -0.5rem
  top -0.5rem
  width 1.25rem
